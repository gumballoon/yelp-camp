<% layout('campgrounds/layouts/boilerplate') %>

<link rel="stylesheet" href="/stylesheets/stars.css">

<div class="flash-relative mt-3">
    <%- include('./partials/flash') %>
</div>

<div class="row p-4 mx-auto">
    <div class="col-12 col-md-6">
        <div id="carousel" class="carousel slide">
            <div class="carousel-inner">
                <% foundCampground.images.forEach((image, i) => { %>
                    <div class="carousel-item <%= (i === 0) ? 'active' : ''%>">
                        <img crossorigin="anonymous" src="<%= image.carousel %>" class="d-block w-100 thumbnail" alt="">
                    </div>
                <% }) %>
            </div>

            <% if (foundCampground.images.length > 1) { %>
                <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                  </button>
                  <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                  </button>
            <%  } %>
        </div>
    
        <h2 class="mt-2 mb-1 d-md-inline-block"><%= foundCampground.title %></h2>
    
        <small class="text-muted fw-semibold"><%= foundCampground.location %></small>
    
        <p class="my-2"><%= foundCampground.description %></p>
    
        <h3 class="fs-6 text-muted mb-3"><span class="fs-4">$<%=foundCampground.price%></span>/night</h3>
        
        <h3 class="fs-6 text-muted mb-3">Submitted by <span class="fs-5 text-dark">@<%= foundCampground.author.username%></span></h3>

        <!-- if there is a logged-in user & the user is the campground author -->
        <% if (currentUser && foundCampground.author._id.equals(currentUser._id)) { %>
            
            <a href="/campgrounds/<%= foundCampground._id %>/edit" class="btn btn-outline-secondary btn-sm me-2">Edit Campground</a>

        <% } %>

        <a href="/campgrounds" class="btn btn-outline-secondary btn-sm">Back to Index</a>
    </div>

    <div class="col-12 col-md-6 mt-4 mt-md-0">
        <% if(foundCampground.geometry && foundCampground.geometry.coordinates.length > 0) { %>
            <h3 class="fs-4">Location</h3>

            <div id="show-map" class="my-3"></div>
        <%  } %>

        <!-- if there is a logged-in user & the user is NOT the campground author -->
        <% if (currentUser && !foundCampground.author._id.equals(currentUser._id)) { %>
            <h3 class="fs-4">Add a Review</h3>

            <form method="post" action="/campgrounds/<%= foundCampground._id %>/reviews" class="needs-validation border-bottom pb-3" novalidate>
                <div class="form-floating">
                    <textarea id="body" name="review[body]" required  class="form-control" placeholder="Leave a review here"></textarea>
                    <label for="body" class="form-label">
                        Your Review <sup>*</sup>
                    </label>
                    <div class="invalid-feedback">This field is required.</div>
                </div>

                <div class="col-12 d-flex pe-2">
                    <fieldset class="starability-basic col-8 py-4 d-flex align-items-center">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No review." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                      </fieldset>
        
                    <button type="submit" class="col-3 my-3 ms-auto btn btn-success">Submit</button>
                </div>
            </form>

        <!-- if there isn't a logged-in user -->
        <%  } else if (!currentUser) { %>
            <h3 class="fs-4">Add a Review</h3>

            <div class="border my-3 p-4 text-center">
                <a href="/login" class="fs-5 text-dark">Login</a> or <a href="/register" class="fs-5 text-dark">Register</a>
            </div>
        <%  } %> 


        <h3 class="fs-4 mt-3">Reviews</h3>

        <% if (foundCampground.reviews.length > 1) { %>
            <% for (let review of foundCampground.reviews) { %>
                <div class="border my-3 p-2">
                    <div class="d-flex justify-content-between align-items-center my-0 text-muted">
                        <p class="starability-result" data-rating="<%= review.rating %>">
                          Rated: <%= review.rating %> stars
                        </p>
                        <p><%= review.date.toDateString()%></p>
                    </div>
                    <p class="my-0"><%= review.body %></p>
    
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <p class="my-0 text-muted">@<%= review.author.username %></p>
                        <% if (currentUser && review.author._id.equals(currentUser._id)) { %>
                        <form action="/campgrounds/<%= foundCampground._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                        <%  } %>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <div class="border my-3 py-4 text-center">
                <p class="m-0">No reviews yet</p>
            </div>
        <% } %>
    </div>
</div>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const foundCampground = <%- JSON.stringify(foundCampground)%>;
</script>
<script src="/scripts/showMap.js"></script>